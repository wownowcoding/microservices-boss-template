a
    color #f39322
    text-decoration none !important
    &:link, &:visited, &:hover
        color #2f2e2e
    &.router-link-active
        color #e12146
body, h1, h2, h3, h4, p, dl, dd, ul, ol, form, input, textarea, th, td, select
    margin 0
    padding 0
em
    font-style normal
li
    list-style none
img
    border none
    vertical-align middle
table
    border-collapse collapse
input, textarea
    outline none
textarea
    resize none !important
    overflow auto
